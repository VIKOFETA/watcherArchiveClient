.fade-enter-active,
.fade-leave-active {
  transition: opacity .3s !important;
}

.fade-enter,
.fade-leave-active {
  opacity: 0 !important;
}

.slide-enter-active,
.slide-leave-active {
  transition: opacity .3s !important, transform .3s !important;
}

.slide-enter,
.slide-leave-active {
  opacity: 0 !important;
  transform: translateX(-200px) !important;
}

.modal-enter-from {
  opacity: 0;
}

.modal-leave-to {
  opacity: 0;
}

.modal-enter-from .modal-container,
.modal-leave-to .modal-container {
  -webkit-transform: scale(1.1);
  transform: scale(1.1);
}