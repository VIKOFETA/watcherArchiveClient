html
  font-size 10px

body 
  font-family "Open Sans"

.button
  padding 1rem 1.5rem
  background #84ceff
  color black
  cursor pointer
  align-self center
  text-transform uppercase
  transition transform .3s

  &:hover
    transform scale(.98)

.fade-enter-active
.fade-leave-active
    transition opacity .5s

.fade-enter
.fade-leave-to
    opacity 0

.text-fade-enter-active
.text-fade-leave-active
  transition opacity .1s

.text-fade-enter
.text-fade-leave-to
  opacity 0
